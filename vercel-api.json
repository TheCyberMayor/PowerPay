{
  "version": 2,
  "name": "powerpay-api",
  "builds": [
    {
      "src": "apps/api/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["apps/api/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/api/src/main.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@database_url",
    "REDIS_URL": "@redis_url",
    "JWT_SECRET": "@jwt_secret"
  }
}