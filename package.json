{
  "name": "powerpay",
  "version": "1.0.0",
  "description": "Electricity Payment Application for Nigeria",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:admin\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "build": "npm run build:api",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "build:mobile": "cd apps/mobile && npm run build:android && npm run build:ios",
    "start": "npm run start:api",
    "start:api": "cd apps/api && npm run start:prod",
    "test": "npm run test:api && npm run test:web && npm run test:admin",
    "test:api": "cd apps/api && npm run test",
    "test:web": "cd apps/web && npm run test",
    "test:admin": "cd apps/admin && npm run test",
    "test:mobile": "cd apps/mobile && npm run test",
    "test:e2e": "cd apps/api && npm run test:e2e",
    "test:cov": "cd apps/api && npm run test:cov",
    "migrate": "cd apps/api && npm run migrate",
    "migrate:rollback": "cd apps/api && npm run migrate:rollback",
    "seed": "cd apps/api && npm run seed",
    "lint": "npm run lint:api && npm run lint:web && npm run lint:admin",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:admin": "cd apps/admin && npm run lint",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up",
    "infra:up": "cd infrastructure/terraform && terraform apply",
    "infra:down": "cd infrastructure/terraform && terraform destroy",
    "deploy:aws": "deploy-aws.bat",
    "deploy:aws:cdk": "cd infrastructure/aws-cdk && npm run deploy",
    "deploy:aws:dev": "cd infrastructure/aws-cdk && npm run deploy:dev",
    "deploy:aws:prod": "cd infrastructure/aws-cdk && npm run deploy:prod",
    "deploy:terraform": "cd infrastructure/terraform && terraform apply",
    "deploy:amplify": "amplify publish",
    "deploy:digitalocean": "deploy-digitalocean.bat",
    "deploy:do": "deploy-digitalocean.bat",
    "docker:do": "docker-compose -f docker-compose.digitalocean.yml up -d"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}